        <ImageButton
            android:id="@+id/staff_owner"
            android:layout_width="127dp"
            android:layout_height="120dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/staff_owner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/staff_photo" />


        <ImageButton
            android:id="@+id/staff_generalManager"
            android:layout_width="127dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/staff_generalmanager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.014"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/staff_owner"
            android:contentDescription="@string/staff_photo"/>


        <ImageButton
